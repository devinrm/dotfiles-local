{
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react",
    "prettier/@typescript-eslint",
    "plugin:no-unsanitized/DOM",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "prettier",
    "no-unsanitized",
    "@typescript-eslint"
  ],
  "parser": ["babel-eslint", "@typescript-eslint/parser"],
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "jsx-a11y/anchor-is-valid": [ "error", {
      "components": [ "Link" ],
      "specialLink": [ "to" ]
    }]
  }
}

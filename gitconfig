[init]
  templatedir = ~/.git_template
[user]
  name = Devin Morgenstern
  email = devin.morgenstern@protonmail.com
[filter "lfs"]
  clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
  required = true
	process = git-lfs filter-process
[push]
  default = simple
[merge]
  ff = only
[pull]
  rebase = true
[alias]
  ap = add --all
  aa = add --patch
  branch = branch -vv
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  c = commit
  can = commit --amend --no-edit
  cv = commit -v
  cm = commit -m
  co = checkout
  dt = difftool --no-symlinks --dir-diff
  empty = commit --allow-empty -m "[rebuild]"
  fall = fetch --all
  gcon = git rebase --continue
  glog = log -E -i --grep
  l = log --pretty=colored
  mg = merge
  mup = !git checkout master && git pull && git checkout -
  pf = push --force-with-lease
  ph = push -u origin head
  pr = hub pull-request
  reb = rebase -i -
  rename = branch -m
  sha = rev-parse --short HEAD
  sla = log --oneline --decorate --graph --all
  st = status
  stu = stash -u
  uncommit = reset --soft HEAD^
  unstage = reset
  upstream = rev-parse --abbrev-ref --symbolic-full-name @{upstream}
  delete = branch -D
	conflicted = !nvim +Conflicted
[pretty]
  colored = format:%Cred%h%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset
  coloredwithrefs = format:%Cred%h%Creset %Cblue%d%Creset %s %Cgreen(%cr)%C(bold blue)%an%Creset
[github]
  user = devinrm
[hub]
  protocol = ssh
[help]
  autocorrect = 1
[color]
  ui = always
[color "diff"]
  commit = green bold
  frag = magenta bold
  meta = yellow bold
  new = green bold
  old = red bold
  whitespace = red reverse
[diff]
  tool = kitty
  guitool = kitty.gui
  colorMoved = zebra
  compactionHeuristic = true
[difftool]
  prompt = false
  trustExitCode = true
[difftool "kitty"]
  cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
  cmd = kitty kitty +kitten diff $LOCAL $REMOTE
[color "diff-highlight"]
  newHighlight = "green bold 22"
  newNormal = "green bold"
  oldHighlight = "red bold 52"
  oldNormal = red bold
[core]
  autocrlf = input
  excludesfile = ~/.gitignore
  pager = diff-so-fancy | less --tabs=1,5 -RFX
  show = diff-so-fancy | less --tabs=1,5 -RFX
  ignorecase = false
[commit]
  template = ~/.gitmessage
  gpgsign = true
[fetch]
  prune = true
[rebase]
  autosquash = true
[rerere]
  enabled = false

[init]
  templatedir = ~/.git_template
[user]
  name = Devin Morgenstern
  email = devin.morgenstern@protonmail.com
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[push]
  default = simple
[merge]
  ff = false
[pull]
  ff = only
[alias]
  aa = add --all
  ap = add --patch
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  car = commit --amend --no-edit
  ci = commit -v
  cm = commit -m
  co = checkout
  empty = commit --allow-empty -m "[SPEC-ALL]"
  fall = fetch --all
  glog = log -E -i --grep
  l = log --pretty=colored
  mg = merge
  mup = !git checkout master && git pull && git checkout -
  pf = push --force-with-lease
  ph = push -u origin head
  rup = !git checkout release/38 && git pull && git checkout -
  fup = !git checkout feature/38 && git pull && git merge -
  sha = rev-parse --short HEAD
  sla = log --oneline --decorate --graph --all
  st = status
  stu = stash -u
  uncommit = reset --soft HEAD^
  unstage = reset
  upstream = rev-parse --abbrev-ref --symbolic-full-name @{upstream}
[pretty]
  colored = format:%Cred%h%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset
  coloredwithrefs = format:%Cred%h%Creset %Cblue%d%Creset %s %Cgreen(%cr)%C(bold blue)%an%Creset
[github]
  user = devinrm
[hub]
  protocol = ssh
[help]
  autocorrect = 1
[color]
  ui = always
[color "diff"]
  commit = green bold
  frag = magenta bold
  meta = yellow bold
  new = green bold
  old = red bold
  whitespace = red reverse
[diff]
  compactionHeuristic = true
[color "diff-highlight"]
  newHighlight = "green bold 22"
  newNormal = "green bold"
  oldHighlight = "red bold 52"
  oldNormal = red bold
[core]
  autocrlf = input
  editor = nvim
  excludesfile = ~/.gitignore
  pager = diff-so-fancy | less --tabs=1,5 -RFX
  show = diff-so-fancy | less --tabs=1,5 -RFX
[commit]
  template = ~/.gitmessage
  gpgsign = true
[fetch]
  prune = true
[rebase]
  autosquash = true
